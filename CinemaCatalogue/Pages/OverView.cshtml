@page
@model CinemaCatalogue.Pages.OverViewModel
@{
    ViewData["Title"] = "Movies Overview page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>Movie Directory</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>ReleaseYear</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.ReleaseYear</td>
                    <td>@movie.Rating</td>
                </tr>
            }
        </tbody>
    </table>
</div>
